@{
    ViewData["Title"] = "Gestión de Salas";
}

<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">

            <!-- Título de la página -->
            <div class="row mb-4">
                <div class="col-12">
                    <h3>Gestión de Salas</h3>
                </div>
            </div>

            <!-- Filtro de búsqueda -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <label for="buildingSelect">Edificio</label>
                    <select class="form-control" id="buildingSelect">
                        <option value="">Seleccione un edificio</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="roomName">Nombre de Sala</label>
                    <input type="text" class="form-control" id="roomName" placeholder="Nombre de la sala">
                </div>
                <div class="col-md-4">
                    <label for="capacity">Capacidad</label>
                    <input type="number" class="form-control" id="capacity" placeholder="Capacidad">
                </div>
            </div>

            <!-- Botón de búsqueda -->
            <div class="row mb-4">
                <div class="col-md-12 text-right">
                    <button type="button" class="btn btn-primary" id="searchButton">Buscar</button>
                </div>
            </div>

            <!-- Tabla de resultados -->
            <div class="row">
                <div class="col-12">
                    <table id="roomsTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Nombre de Sala</th>
                                <th>Descripción</th>
                                <th>Capacidad</th>
                                <th>Edificio</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Los datos se llenarán dinámicamente con DataTables -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts de DataTables y jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

<script>
    $(document).ready(function () {
        // Inicializar DataTable
        var table = $('#roomsTable').DataTable({
            "ajax": {
                "url": "/Sala/GetAll",
                "dataSrc": ""
            },
            "columns": [
                { "data": "NombreCorto" },
                { "data": "descripcion" },
                { "data": "capacidad" }
            ]
        });
        // Evento de doble clic en las filas de la tabla
        $('#roomsTable tbody').on('dblclick', 'tr', function () {
            var data = table.row(this).data();
            if (data && data.id) {
                // Redirigir a la vista 'add' con el parámetro 'id'
                window.location.href = '/Sala/Update/' + data.id;
            }
        });
        // Cargar opciones de edificios dinámicamente
        function cargarEdificios() {
            $.ajax({
                url: '/Sala/GetEdificios',
                type: 'GET',
                success: function (data) {
                    var buildingSelect = $('#buildingSelect');
                    buildingSelect.empty().append('<option value="">Seleccione un edificio</option>');
                    data.forEach(function (edificio) {
                        if (edificio && edificio.id && edificio.descripcion) { // Valida antes de usar
                            buildingSelect.append('<option value="' + edificio.id + '">' + edificio.descripcion + '</option>');
                        }
                    });
                },
                error: function () {
                    alert("Error al cargar los edificios.");
                }
            });
        }

        cargarEdificios(); // Llamar al cargar la página.

        // Filtrar salas según el edificio seleccionado
        $('#buildingSelect').on('change', function () {
            var edificio = $(this).val();
            var nombreSala = $('#roomName').val();
            var capacidad = $('#capacity').val();

            // Recargar la tabla con los filtros
            table.ajax.url(`/Salas/GetSalas?edificio=${edificio}&nombreSala=${nombreSala}&capacidad=${capacidad}`).load();
        });

        // Botón de búsqueda
        $('#searchButton').on('click', function () {
            var edificio = $('#buildingSelect').val();
            var nombreSala = $('#roomName').val();
            var capacidad = $('#capacity').val();

            // Configurar la URL del DataTable para incluir los parámetros de búsqueda
            table.ajax.url(`/Salas/GetSalas?edificio=${edificio}&nombreSala=${nombreSala}&capacidad=${capacidad}`).load();
        });

        // Evento para el botón Editar
        $('#roomsTable').on('click', '.editBtn', function () {
            var salaId = $(this).data('id');
            window.location.href = `/Sala/Edit/${salaId}`; // Redirige a la página de edición
        });

        // Evento para el botón Eliminar
        $('#roomsTable').on('click', '.deleteBtn', function () {
            var salaId = $(this).data('id');
            if (confirm("¿Está seguro de que desea eliminar esta sala?")) {
                $.ajax({
                    url: `/Sala/Delete/${salaId}`,
                    type: 'POST',
                    success: function () {
                        table.ajax.reload(); // Recargar la tabla después de eliminar
                    }
                });
            }
        });
    });

</script>