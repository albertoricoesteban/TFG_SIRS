<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="@Url.Action("Index", "Home")" class="brand-link">
        <img src="~/adminlte/dist/img/LogoSIRS.png" alt="SIRS Logo" class="brand-image img-circle elevation-5" />
        <span class="brand-text font-weight-light">SIRS</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/adminlte/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            
            <div class="info">
                <a href="@Url.Action("Index", "Home")" class="d-block">
                    @User.Identity.Name <!-- Muestra el nombre del usuario logado -->
                </a>
                <small class="text-muted">
                    @if (User.IsInRole("Administrador"))
                    {
                        <span>Administrador</span>
                    }
                    else if (User.IsInRole("Solicitante"))
                    {
                        <span>Solicitante</span>
                    }
                    else
                    {
                        <span>Usuario</span>
                    }
                </small>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Menu Reservas -->
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-book"></i>
                        <p>
                            Reservas
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Reserva")" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Gestión de reservas</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Calendar", "Reserva")" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Calendario Reservas</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Add", "Reserva")" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Alta de reserva</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Menu Salas -->
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Salas
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Sala")" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Gestión de salas</p>
                            </a>
                        </li>
                        @if (User.IsInRole("Administrador"))
                        {
                        <li class="nav-item">
                            <a href="@Url.Action("Add", "Sala")" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Alta de sala</p>
                            </a>
                        </li>
                        }
                    </ul>
                </li>

                <!-- Menu Edificio (visible solo para administradores) -->
                @if (User.IsInRole("Administrador"))
                {
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-city"></i>
                            <p>
                                Edificio
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Edificio")" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Gestión de edificios</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Add", "Edificio")" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Alta de edificio</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                <!-- Menu Perfil -->
                <li class="nav-item">
                    <a href="@Url.Action("MiPerfil", "Account")" class="nav-link">
                        <i class="nav-icon fas fa-user"></i>
                        <p>
                            Perfil
                        </p>
                    </a>
                </li>

                <!-- Botón de Cerrar Sesión -->
                <li class="nav-item">
                    <a href="@Url.Action("CerrarSesion", "Account")" class="nav-link text-danger">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>
                            Cerrar Sesión
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
