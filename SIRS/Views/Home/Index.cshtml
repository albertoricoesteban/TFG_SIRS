@{
    ViewData["Title"] = "Home Page";
    var isAdmin = User.IsInRole("Administrador");  // Verificar si el usuario tiene el rol de Administrador
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Bienvenida/o a SIRS, el sistema de gestión de reservas</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <!-- Logo al centro -->
            <div class="row">
                <div class="col-12 text-center mb-4">
                    <img src="~/adminlte/dist/img/LogoSIRS.png" alt="Logo" class="img-fluid" style="max-width: 200px;">
                </div>
            </div>

            <!-- Cards de Enlaces Principales -->
            <div class="row">
                <!-- Card 1: Usuarios -->
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>Reservas</h3>
                        </div>
                        <div class="icon">
                            <i class="fas fa-book"></i>
                        </div>
                        <a href="@Url.Action("Index", "Reserva")" class="small-box-footer">
                            Ir a gestión de reservas <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>

                <!-- Card 2: Productos -->
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>Gestión de salas</h3>
                        </div>
                        <div class="icon">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        <a href="@Url.Action("Index", "Sala")" class="small-box-footer">
                            Ir a gestión de salas <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>

                <!-- Card 3: Calendar -->
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-primary">
                        <div class="inner">
                            <h3>Calendario</h3>
                        </div>
                        <div class="icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <a href="@Url.Action("Calendar", "Reserva")" class="small-box-footer">
                            Ver calendario <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>

                <!-- Card 4: Gestión de edificios (Visible solo si es Admin) -->
                @if (isAdmin)
                {
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3>Gestión de edificios</h3>
                            </div>
                            <div class="icon">
                                <i class="fas fa-city"></i>
                            </div>
                            <a href="@Url.Action("Index", "Edificio")" class="small-box-footer">
                                Ver gestión de edificios <i class="fas fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div>
                }

                <!-- Card 5: Mi perfil -->
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>Mi perfil</h3>
                        </div>
                        <div class="icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <a href="@Url.Action("MiPerfil", "Account")" class="small-box-footer">
                            Ver perfil <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
